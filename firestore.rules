
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // An admin is a user whose UID exists in the 'admins' collection.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection
    match /admins/{userId} {
      // Any authenticated user can make themselves an admin by writing to their own admin doc.
      // An existing admin can also create/update other admin docs.
      allow write: if request.auth.uid == userId || isAdmin();
      
      // Any authenticated user can check their own admin status. Admins can read any admin doc.
      allow get: if request.auth.uid == userId || isAdmin();
      
      // Admins can list other admins. Non-admins cannot.
      allow list: if isAdmin();

      // Only admins can delete other admin documents.
      // An admin cannot delete themselves to prevent accidental lockout.
      allow delete: if isAdmin() && request.auth.uid != userId;
    }

    // Public read access for products, write access for admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin(); 

      // Reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null; // Allow any authenticated user to post a review
        allow update, delete: if isAdmin(); // Only admin can moderate
      }
    }

    // Public read access for site settings, write access for admins.
    match /settings/siteConfig {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // Public read access for banners, write access for admins.
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin-only access for orders
    match /orders/{orderId} {
      allow create: if true; // Guest checkout still allowed
      allow read, update, delete: if isAdmin();
    }

    // Public read for order status tracking, guest create, admin write.
    match /publicOrders/{orderId} {
      allow get: if true;
      allow create: if true;
      allow update, delete: if isAdmin(); // Only admins should update public tracking info
    }

    // Public read, admin write for categories
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Public read, admin write for FAQs
    match /faq/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
