
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      // An admin is a user whose UID exists in the 'admins' collection.
      // This check requires that the user can read their own document in the 'admins' collection.
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Admins collection
    match /admins/{userId} {
      // Allow any authenticated user to create an admin doc IF the collection is empty.
      // This is less secure as any auth'd user can read admin UIDs, but necessary for client-side setup.
      allow create: if request.auth != null && list(/databases/$(database)/documents/admins, 1).size() == 0;
      
      // Allow admins to create other admins
      allow create: if isAdmin();
      
      // An auth'd user can check their own admin status.
      // An admin can read any admin doc.
      allow get: if request.auth.uid == userId || isAdmin();
      
      // An admin can list other admins.
      allow list: if isAdmin();

      // Only admins can delete admin documents.
      allow delete: if isAdmin();
    }

    // Public read access for products, write access for admins.
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin(); 

      // Reviews subcollection
      match /reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null; // Allow any authenticated user to post a review
        allow update, delete: if isAdmin(); // Only admin can moderate
      }
    }

    // Public read access for site settings, write access for admins.
    match /settings/siteConfig {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    // Public read access for banners, write access for admins.
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Admin-only access for orders
    match /orders/{orderId} {
      allow create: if true; // Guest checkout still allowed
      allow read, update, delete: if isAdmin();
    }

    // Public read for order status tracking, guest create, admin write.
    match /publicOrders/{orderId} {
      allow get: if true;
      allow create: if true;
      allow update, delete: if isAdmin(); // Only admins should update public tracking info
    }

    // Public read, admin write for categories
    match /categories/{categoryId} {
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Public read, admin write for FAQs
    match /faq/{faqId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
